{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": false,
    "strictNullChecks": true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    "examples",
    "lib",
    "es",
    "dist",
    "**/__tests__",
    "**/__test__",
    "**/demo",
    "test",
    "docs",
    "tests",
    "gulpfile.js"
  ]
}
